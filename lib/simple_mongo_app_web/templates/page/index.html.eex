<div class="jumbotron">
  <h3>Articles Database</h3>

  <table class="table">
    <tbody>

      <% i = 0 %>
      <%= for article <- show_articles() do %>
        <tr>
          <td align = "left"> <%= elem( article, 1 ) |> raw %> </td>

          <td class="text-right">
            <% id = elem( article, 0 ) %>
            <form id="number<%= id %>" method="post" name="number<%= id %>">
              <span><button class="btn btn-default btn-xs" id="save_button_<%= id %>" type="submit">Save</button></span>
            </form>
          </td>

        </tr>

      <% end %>

      <tr>
        <td>
<%= find_article("5f9d7adca9f74f0c6b94623b", show_articles()) %>
        </td>
      </tr>

    </tbody>
  </table>
</div>
